{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["eslint:recommended", "airbnb"],
  "parserOptions": {
    "ecmaVersion": 2015,
    "sourceType": "module"
  },
  "rules": {
    "import/extensions": "off",
    "no-console": "warn",
    "max-depth": ["error", 2],
    "max-lines-per-function": ["error", 15],
    "linebreak-style": 0,
    "arrow-parens": ["error", "as-needed"],
    "no-return-assign": "off",
    "no-param-reassign": ["error", { "props": false }]
  }
}
