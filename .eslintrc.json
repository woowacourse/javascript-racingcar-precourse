{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["airbnb-base", "plugin:prettier/recommended"],
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 12
  },
  "rules": {
    "prettier/prettier": ["error", { "printWidth": 100 }],
    "max-depth": ["error", 2],
    "max-lines-per-function": ["error", 15]
  },
  "ignorePatterns": ["cypress/*"]
}
